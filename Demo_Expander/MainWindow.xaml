<Window x:Class="Demo_Expander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Expander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Expander Header="Een aantal Radio Buttons" Margin="12">
            <StackPanel Margin="6" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <RadioButton x:Name="RadioButton1" Content="Je kan mij kiezen" Height="30"/>
                <RadioButton x:Name="RadioButton2" Content="Of Je kan mij kiezen" Height="30"/>
            </StackPanel>
        </Expander>
    </StackPanel>
</Window>
