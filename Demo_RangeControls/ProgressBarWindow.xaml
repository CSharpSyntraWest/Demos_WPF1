<Window x:Class="Demo_RangeControls.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_RangeControls"
        mc:Ignorable="d"
        Title="Progress bar demo" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Margin="12" x:Name="Progress" Value="20" Height="30" Width="220" Minimum="0" Maximum="100"/>
        <Button x:Name="StartLangProces" Click="StartLangProces_Click" Height="30" Width="140" Content="Start lange taak"/>
    </StackPanel>
</Window>
